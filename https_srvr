#!/bin/bash

# Script to install Apache (httpd) and create a user 'shafeeq' with password 'admin'

echo "ğŸ”§ Updating system packages..."
sudo yum update -y

echo "ğŸ“¦ Installing Apache (httpd)..."
sudo yum install -y httpd

echo "âœ… Enabling and starting Apache service..."
sudo systemctl enable httpd
sudo systemctl start httpd

echo "ğŸ‘¤ Creating user 'shafeeq'..."
if id "shafeeq" &>/dev/null; then
    echo "User 'shafeeq' already exists."
else
    sudo useradd shafeeq
    echo "shafeeq:admin" | sudo chpasswd
    echo "âœ… User 'shafeeq' created with password 'admin'"
fi

echo "ğŸ›¡ï¸ Ensuring Apache is running..."
sudo systemctl status httpd --no-pager

echo "âœ… Script completed successfully."
